<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
          <div class="inner">
            <h3><%= Category.all.count %></h3>
            <p>Categories</p>
          </div>
          <div class="icon">
            <i class="ion ion-bag"></i>
          </div>
          <%= link_to admin_categories_path, class:"small-box-footer" do %> 
            More info <i class="fas fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
          <div class="inner">
            <h3>53<sup style="font-size: 20px">%</sup></h3>
            <p>Bounce Rate</p>
          </div>
          <div class="icon">
            <i class="ion ion-stats-bars"></i>
          </div>
          <a href="#" class="small-box-footer">More info 
            <i class="fas fa-arrow-circle-right"></i>
          </a>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
          <div class="inner">
            <h3><%= User.all.count %></h3>

            <p>User Registrations</p>
          </div>
          <div class="icon">
            <i class="ion ion-person-add"></i>
          </div>
          <a href="#" class="small-box-footer">More info 
            <i class="fas fa-arrow-circle-right"></i>
          </a>
        </div>
      </div>
      <!-- ./col -->
      <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
          <div class="inner">
            <h3>65</h3>

            <p>Unique Visitors</p>
          </div>
          <div class="icon">
            <i class="ion ion-pie-graph"></i>
          </div>
          <a href="#" class="small-box-footer">More info 
            <i class="fas fa-arrow-circle-right"></i>
          </a>
        </div>
      </div>
    </div>
    </div>
    <div>
    <%= form_tag(admin_search_path, method: "get", remote: true, id: "search-form-chart") do %>
       <%= select_tag "filter", options_for_select(['Day', 
                                                    'Week', 
                                                    'Month']), id: "select-period",class:"form-control" %>
       <%= submit_tag "search", id:'search_submit' ,style: 'display:none'%>
    <% end %>
  </div>
    <div id="graph-container">
    <%= render 'graph', data: @data %>
    </div>
  </section>
  <script>
  $("#select-period").on("change", function(){
    $.ajax({
      type: "get",
      url: "search",
      data: {filter: $(this).val()},
      dataType: "script",
    })
  })
</script>
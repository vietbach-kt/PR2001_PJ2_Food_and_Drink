<section class="login_register">      
  <div class="container">         
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-6 col-12">
        <h1>Register Now</h1>
        <div class="login-container">
          <div class="row">     
            <div class="col-lg-12 col-md-12 col-12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id:"registration-form") do |f|  %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="login-form">
                  <div class="login-logo">  
                    <%= link_to root_path do %>
                      <%= image_tag 'logo1.jpg', class:"logo" %>
                    <% end %>                
                  </div>
                  <div class="create-text"><h4>Create Your Account</h4></div>
                  <div class="form-group">
                    <%= f.label :Name %><br />
                    <%= f.text_field :name, autofocus: true, class:"video-form"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"video-form"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password",class:"video-form" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"video-form" %>
                  </div>
                  <div class="form-group form-check-inline">
                    <%= f.label :Made, class: "form-check-label"%>:
                    <%= f.label :Men, class: "form-check-label"%>
                    <%= f.radio_button :gender, "women", class:"form-check-input"%>
                    <%= f.label :Women, class: "form-check-label"%>
                    <%= f.radio_button :gender, "men", class:"form-check-input"%>
                    <%= f.label :Other, class: "form-check-label"%>
                    <%= f.radio_button :gender, "other", class:"form-check-input"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :Birth%>
                    <%= f.date_field :birth, class: 'form-control'%>
                  </div>
                  <div class="actions">
                    <%= f.submit "Sign up",class:"login-btn btn-link" %>
                  </div>
                  <div class="forgot-password"> 
                    <p>If you have an account?
                      <%= link_to  login_path do %>
                        <span style="color:#ffa803;"> - Login Now</span>
                      <% end %>
                    </p>
                  </div>  
                </div>
              <% end %>
            </div>
          </div>            
        </div>            
      </div>        
    </div>      
  </div>
</section>
<script>
$(document).ready(function(){
    $("#new_user").validate({
    onfocusout: false,
		onkeyup: false,
    onclick: false,
    rules: {
      "user[name]" :{
        required: true,
				maxlength: 50
      },
      "user[email]" :{
        required: true,
        email: true
      },
      "user[password]" :{
        required: true,
				minlength: 6
      },
      "user[password_confirmation]" :{
        required: true,
				minlength: 10
      },
      "user[gender]" :{
        required: true,
      },
      "user[birth]" :{
        required: true,
      }
    },
    messages: {
			"user[name]": {
				required: "User name can't blank",
				maxlength: "Hãy nhập   ký tự"
			},
			"user[password]": {
				required: "Password can't blank",
				minlength: "Hãy nhập ít nhất 6 ký tự"
			},
			"user[password_confirmation]": {
				equalTo: "Password to match",
				minlength: "Hãy nhập ít nhất 6 ký tự"
			}
		}
  });
});

</script>